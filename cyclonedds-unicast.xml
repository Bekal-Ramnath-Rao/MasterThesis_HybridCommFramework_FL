<?xml version="1.0" encoding="UTF-8" ?>
<CycloneDDS xmlns="https://cdds.io/config" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://cdds.io/config https://raw.githubusercontent.com/eclipse-cyclonedds/cyclonedds/master/etc/cyclonedds.xsd">
    <Domain id="any">
        <General>
            <!-- Enable unicast-only discovery -->
            <AllowMulticast>false</AllowMulticast>
        </General>
        <Discovery>
            <!-- Use simple participant discovery protocol (SPDP) with unicast only -->
            <ParticipantIndex>auto</ParticipantIndex>
            <!-- Peers will be discovered via broadcast on the Docker network -->
            <!-- No static peer list - allows dynamic discovery within the same network -->
        </Discovery>
        <Internal>
            <!-- Reduce discovery timeout for faster convergence in unicast mode -->
            <SquashParticipants>false</SquashParticipants>
        </Internal>
        <Tracing>
            <!-- Optional: Enable tracing for debugging -->
            <Verbosity>warning</Verbosity>
            <OutputFile>stderr</OutputFile>
        </Tracing>
    </Domain>
</CycloneDDS>
